/*
* Buttons
* @module buttons
*/

.btn
    position       relative
    z-index        1
    height         42px
    display        inline-block
    line-height    42px
    text-align     center
    border         none
    background     $yellow_01
    font-family    $familyMediumItalic
    text-transform uppercase
    border-radius  5px
.button_yellow
    .btn_arrow_shadow
        button
            width         100%
            border-radius 0
        margin   0 30px 0 15px
        position relative
        &:before
            sprite($button_back_shadow)
            content  ' '
            position absolute
            top      0
            left     -15px
            z-index  5
        &:after
            sprite($button_front_shadow)
            content  ' '
            position absolute
            top      0
            right    -30px
            z-index  5
    img
        position relative
        bottom   rem(10px)
        z-index  0
        height   rem(3px)
        width    100%
.button
    position relative
    margin   0 0 5px 0
    &.button_arrow
        button
            margin        0 30px 0 15px
            border-radius 0
        &:before
            sprite($button_back)
            content  ' '
            position absolute
            top      0
            left     0
            z-index  5
        &:after
            sprite($button_front)
            content  ' '
            position absolute
            top      0
            right    0
            z-index  5
    &.unactive
        button
            background $gray_e3
        &:before
            sprite($button_back_unactive)
        &:after
            sprite($button_front_unactive)
    img
        position absolute
        left     0
        bottom   -10px
        z-index  0
